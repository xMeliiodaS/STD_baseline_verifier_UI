<Application x:Class="AT_baseline_verifier.App"  
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             StartupUri="MainMenuWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Add your custom button style here -->
            <Style x:Key="CustomMaterialButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <!-- Blue Button Style -->
            <Style x:Key="PurpleButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                <Setter Property="MaxWidth" Value="200" />
                <Setter Property="Foreground" Value="White" />
            </Style>

            <!-- Green Button Style -->
            <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="{DynamicResource SecondaryHueMidBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="MaxWidth" Value="350" />
                <Setter Property="Background" Value="#4CAF50" />
                <Setter Property="BorderBrush" Value="#4CAF50" />
                <!-- Material Design Green 500 -->
            </Style>

            <!-- Blue Button (hardcoded color, stays blue regardless of theme) -->
            <Style x:Key="BlueButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="#0D47A1"/>
                <!-- Material Design Blue 500 -->
                <Setter Property="MaxWidth" Value="230" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="#0D47A1" />
            </Style>

            
            <Style x:Key="BugReportButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="#4CAF50" />
                <Setter Property="Foreground" Value="White" />
                <!-- Only left border -->
                <Setter Property="BorderBrush" Value="#555555" />
                <!-- left border color -->
                <Setter Property="BorderThickness" Value="0.5,0,0,0" />
                <!-- Left, Top, Right, Bottom -->
                <Setter Property="MinWidth" Value="5" />
                <Setter Property="Effect" Value="{x:Null}" />
                <!-- Remove corner radius so border is straight -->
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="0" />
            </Style>


            <Style x:Key="RulesReportButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="#0D47A1" />
                <Setter Property="Foreground" Value="White" />
                <!-- Only left border -->
                <Setter Property="BorderBrush" Value="#555555" />
                <!-- left border color -->
                <Setter Property="BorderThickness" Value="0.5,0,0,0" />
                <!-- Left, Top, Right, Bottom -->
                <Setter Property="MinWidth" Value="5" />
                <!-- Remove corner radius so border is straight -->
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="0" />
                <Setter Property="Effect" Value="{x:Null}" />
            </Style>




            <Style x:Key="CustomToolTip" TargetType="ToolTip" BasedOn="{StaticResource MaterialDesignToolTip}">
                <Setter Property="Background" Value="#333333"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#555555"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HasDropShadow" Value="True"/>
                <Setter Property="Placement" Value="Mouse"/>

                <!-- Timing -->
                <Setter Property="ToolTipService.InitialShowDelay" Value="0"/>
                <Setter Property="ToolTipService.BetweenShowDelay" Value="100"/>
            </Style>




        </ResourceDictionary>
    </Application.Resources>
</Application> 
