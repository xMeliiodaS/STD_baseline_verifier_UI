<Application x:Class="AT_baseline_verifier.App"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Add your custom button style here -->
            <Style x:Key="CustomMaterialButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <!-- Blue Button Style -->
            <Style x:Key="BlueButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                <Setter Property="MaxWidth" Value="200" />
                <Setter Property="Foreground" Value="White" />
            </Style>

            <!-- Green Button Style -->
            <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource CustomMaterialButton}">
                <Setter Property="Background" Value="{DynamicResource SecondaryHueMidBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="MaxWidth" Value="400" />
                <Setter Property="Background" Value="#4CAF50" />
                <!-- Material Design Green 500 -->
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application> 
