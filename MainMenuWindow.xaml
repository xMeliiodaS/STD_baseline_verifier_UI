<Window
    x:Class="AT_baseline_verifier.MainMenuWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Tools Platform"
    Height="600"
    Width="800"
    MinWidth="600"
    MinHeight="500"
    Background="#1E1E1E"
    WindowStartupLocation="CenterScreen"
    Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
            Text="Tools Platform"
            Foreground="White"
            HorizontalAlignment="Center"
            FontSize="32"
            FontWeight="Bold"
            Margin="0,0,0,30" />

        <!-- Tools Grid -->
        <Border
            Grid.Row="1"
            Background="#2D2D30"
            CornerRadius="12"
            Padding="30"
            Margin="0,0,0,20">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Text="Select a Tool"
                    Foreground="LightGray"
                    FontSize="18"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,30" />

                <!-- Tools Container -->
                <UniformGrid
                    Grid.Row="1"
                    Columns="2"
                    Rows="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    
                    <!-- STD Baseline Verifier Tool -->
                    <Button
                        x:Name="BaselineVerifierButton"
                        Click="BaselineVerifierButton_Click"
                        Style="{StaticResource CustomMaterialButton}"
                        Margin="15"
                        Cursor="Hand"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#4CAF50"
                        Padding="20"
                        MinHeight="200">
                        <StackPanel>
                            <TextBlock
                                Text="ðŸ”"
                                FontSize="48"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,15" />
                            <TextBlock
                                Text="STD Baseline Verifier"
                                FontSize="20"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                TextWrapping="Wrap"
                                Foreground="White" />
                            <TextBlock
                                Text="Verify STD bugs and validate rules"
                                FontSize="12"
                                HorizontalAlignment="Center"
                                Foreground="LightGray"
                                Margin="0,10,0,0"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>

                    <!-- Placeholder for future tools -->
                    <Button
                        x:Name="PlaceholderToolButton"
                        Style="{StaticResource CustomMaterialButton}"
                        Margin="15"
                        Cursor="Hand"
                        Background="#3C3C3C"
                        Foreground="LightGray"
                        BorderBrush="#555"
                        Padding="20"
                        MinHeight="200"
                        IsEnabled="False">
                        <StackPanel>
                            <TextBlock
                                Text="âž•"
                                FontSize="48"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,15" />
                            <TextBlock
                                Text="More Tools"
                                FontSize="20"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                TextWrapping="Wrap"
                                Foreground="LightGray" />
                            <TextBlock
                                Text="Coming soon..."
                                FontSize="12"
                                HorizontalAlignment="Center"
                                Foreground="Gray"
                                Margin="0,10,0,0"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border
            Grid.Row="2"
            Background="#2D2D30"
            Padding="8"
            CornerRadius="8">
            <TextBlock
                Text="Developed by Bahaa"
                Foreground="Gray"
                FontSize="11"
                FontStyle="Italic"
                HorizontalAlignment="Center" />
        </Border>
    </Grid>
</Window>

