<Window x:Class="AT_baseline_verifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AT Baseline Verifier"
        Height="400" Width="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Automated Baseline Verifier"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   FontSize="26"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="12" Padding="20">
            <StackPanel>

                <!-- File Selector -->
                <Button Click="SelectFile_Click"
        Style="{StaticResource BlueButton}"
        Margin="0,0,0,10"
        Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="📂"
                   FontSize="18"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

                        <TextBlock Grid.Column="1"
                   Text="Select Excel File"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center" />
                    </Grid>
                </Button>
                <!-- Selected File Label -->
                <TextBlock x:Name="SelectedFileLabel"
                           HorizontalAlignment="Center"
                           Text="No file selected"
                           Foreground="LightGray"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10" />

                <!-- STD Name with Placeholder -->
                <Grid Margin="0,0,0,28" MaxWidth="300">
                    <TextBox x:Name="STDNameInput"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#555"
                             Padding="8"
                             FontSize="14"
                             TextChanged="STDNameInput_TextChanged"/>
                    <TextBlock x:Name="STDPlaceholder"
                               Text="Enter STD Name"
                               HorizontalAlignment="Center"
                               Foreground="Gray"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Run Script -->
                <Button Click="RunScript_Click"
        Style="{StaticResource GreenButton}"
        Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    
                        <TextBlock Text="▶"
                   FontSize="18"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

                        <TextBlock Grid.Column="1"
                   Text="Run Python Script"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center" />
                    </Grid>
                </Button>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="8" CornerRadius="8" Margin="0,20,0,0">
            <TextBlock x:Name="StatusText"
                       HorizontalAlignment="Center"
                       Text="Ready"
                       Foreground="LightGray"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
